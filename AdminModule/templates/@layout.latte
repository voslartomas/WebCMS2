{**
 * Administration main layout WebCMS2.
 *
 * @copyright  Copyright (c) 2013 Tomáš Voslař
 * @package    WebCMS2
 *
 * @param string   $basePath web base path
 * @param string   $robots   tell robots how to index the content of a page (optional)
 * @param array    $flashes  flash messages
 *}
<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">

	<meta name="description" content="WebCMS2 Administration">
	<meta name="robots" content="{$robots}" n:ifset="$robots">

	<title>WebCMS 2 - {_'Administration'}</title>
	{block head}
		{* TODO vytvorit hlavni soubory pro js a css, include pouze techto dvou *}
		<link rel="stylesheet" media="screen,projection,tv" href="{$basePath}/css/screen.css" type="text/css">
		<link rel="stylesheet" media="print" href="{$basePath}/css/print.css" type="text/css">
		<link rel="stylesheet" media="screen" href="{$basePath}/grido/grido.css" type="text/css">
		<link rel="stylesheet" media="screen" href="{$basePath}/kendoui/kendo.common.css" type="text/css">
		<link rel="stylesheet" media="screen" href="{$basePath}/kendoui/kendo.default.css" type="text/css">
		<link rel="stylesheet" media="screen" href="{$basePath}/bootstrap/css/bootstrap.css" type="text/css">
		<link rel="shortcut icon" href="{$basePath}/favicon.ico" type="image/x-icon">
	{/block}
</head>

<body>
	<script> document.body.className+=' js' </script>
	
	<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container jq_head">
		<div class="navbar-header">
		  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
		  <a class="navbar-brand ajax" n:href=":Admin:Homepage:">WebCMS 2</a>
		</div>

		<div class="navbar-collapse collapse">
			{snippet header}
				<ul class="nav navbar-nav">
					  <li {if $activePresenter == "Admin:Pages"}class="active"{/if}>
						  <a class="ajax" n:href=":Admin:Pages:">{_'Pages'}</a>
					  </li>
					  <li {if $activePresenter == "Admin:Modules"}class="active"{/if}>
						  <a class="ajax" n:href=":Admin:Modules:">{_'Modules'}</a>
					  </li>
					  <li {if $activePresenter == "Admin:Users"}class="active"{/if}>
						  <a class="ajax" n:href=":Admin:Users:">{_'Users'}</a>
					  </li>
					  <li {if $activePresenter == "Admin:Languages"}class="active"{/if}>
						  <a class="ajax" n:href=":Admin:Languages:">{_'Languages and translations'}</a>
					  </li>
					  <li {if $activePresenter == "Admin:Settings"}class="active"{/if}>
						  <a class="ajax" n:href=":Admin:Settings:">{_'Settings'}</a>
					  </li>
					  <li {if $activePresenter == "Admin:Filesystem"}class="active"{/if}>
						  <a class="ajax" n:href=":Admin:Filesystem:">{_'Filesystem'}</a>
					  </li>
					  <li {if $activePresenter == "Admin:Update"}class="active"{/if}>
						  <a class="ajax" n:href=":Admin:Update:">{_'Update'} <span class="badge">0</span></a>
					  </li>
				  </ul>
			
			<div class="navbar-form navbar-right">
				<form method="get" class="pull-left">
					<select name='language_id_change'>
						{foreach $languages as $l}
							<option value="{$l->getId()}" {if $l->getId() == $language->getId()}selected{/if}>{$l->getName()}</option>
						{/foreach}
					</select>
					<input type="submit" class="btn btn-mini" value="{_'ok'}" />
				</form>

				<a n:href="Login:out" class="logout btn btn-danger pull-right" data-confirm="{_'Are you sure?'}">{_'Sign out'}</a>  
			</div>
			{/snippet}
		</div>
	</div>
	</div>
			
	<div id="loader">
		 <div class="progress progress-striped active" style="width: 300px;">
			<div class="progress-bar"  role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
			  <div>{_'Loading data...'}</div>
			</div>
		  </div>
	</div>
			
	<div class="container flash-messages">
	  {snippet flashMessages}
		  <div n:foreach="$flashes as $flash" class="alert alert-{$flash->type} fade in">{$flash->message}<a href="#" class="close" data-dismiss="alert">&times;</a></div>
	  {/snippet}
	</div>
	 {define content}
		  
		  {/define}
	<div class="container">
		{snippet content}
			{include #content}
		{/snippet}
	</div>
		
	{snippet footer}
	<footer class="navbar">
		<p>WebCMS2 {_'version'} {$version['revision']} {_'from date'} {$version['date']|date:'d.m.Y H:i:s'}. &copy; Webcook 2009-2013</p>
	</footer>
	{/snippet}
	
	<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
	<div class="modal-content">
	  <div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	  </div>
	  <div class="modal-body">
		  {define modalContent}
		  
		  {/define}
		{snippet modalContent}
				{include #modalContent}
		{/snippet}
	  </div>
	</div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js"></script>
		<script type="text/javascript" src="{$basePath}/kendoui/kendo.web.js"></script>
		<script type="text/javascript" src="{$basePath}/bootstrap/js/bootstrap.js"></script>
		<script type="text/javascript" src="{$basePath}/plugins/bootbox.min.js"></script>
		<script type="text/javascript" src="{$basePath}/grido/grido.js"></script>
		<script type="text/javascript" src="{$basePath}/plugins/nette.ajax.js"></script>
		<script type="text/javascript" src="{$basePath}/admin-js/netteForms.js"></script>
		<script type="text/javascript" src="{$basePath}/admin-js/Webcms/Webcms.js"></script>
</body>
</html>
